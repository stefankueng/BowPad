<Application xmlns='http://schemas.microsoft.com/windows/2009/Ribbon'>
  <!-- Commands section -->
  <Application.Commands>

    <Command Name="cmdMainTab" Symbol="IDC_CMD_MAINTAB">
      <Command.LabelTitle>Main</Command.LabelTitle>
    </Command>
    <Command Name="cmdGroupFile" LabelTitle="File">
      <!-- This image is used for when the group shrinks into a "pop-up".  The other groups
      in the markup don't display as pop-ups, so we don't specify an image for them.  -->
      <Command.LargeImages>
        <Image>res/SaveAllL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdGroupClipboard" LabelTitle="Clipboard">
      <Command.LargeImages>
        <Image>res/Paste.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdGroupUndo" LabelTitle="Undo">
      <Command.LargeImages>
        <Image>res/UndoL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdGroupView" LabelTitle="View">
      <Command.LargeImages>
        <Image>res/LineWrapL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdQat"/>
    <Command Name="cmdFileMenu"/>
    <Command Name="cmdMRUList">
      <Command.LabelTitle>
        <String Id ="280">MRU List</String>
      </Command.LabelTitle>
    </Command>
    <Command Name="cmdExit" LabelTitle="Exit">
      <Command.LargeImages>
        <Image>res/ExitL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdNew" LabelTitle="New" TooltipTitle="New Document" TooltipDescription="Creates a new tab with an empty document">
      <Command.LargeImages>
        <Image>res/NewL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdOpen" LabelTitle="Open" TooltipTitle="Open Files" TooltipDescription="Opens one or more files">
      <Command.LargeImages>
        <Image>res/OpenL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdSave" LabelTitle="Save" TooltipTitle="Save File" TooltipDescription="Saves the current tab">
      <Command.LargeImages>
        <Image>res/SaveL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdSaveAll" LabelTitle="Save all" TooltipTitle="Save Files" TooltipDescription="Saves all open files">
      <Command.LargeImages>
        <Image>res/SaveAllL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdSaveAs" LabelTitle="Save as" TooltipTitle="Save as" TooltipDescription="Asks where to save the current tab">
      <Command.LargeImages>
        <Image>res/SaveAsL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdClose" LabelTitle="Close Tab" TooltipTitle="Close Tab" TooltipDescription="Close the current tab">
      <Command.LargeImages>
        <Image>res/CloseL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdCloseAll" LabelTitle="Close all" TooltipTitle="Close All Tabs" TooltipDescription="Closes all open files">
      <Command.LargeImages>
        <Image>res/CloseAllL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdCopy" LabelTitle="Copy" TooltipTitle="Clipboard" TooltipDescription="Copy the current selection to the clipboard">
      <Command.SmallImages>
        <Image>res/Copy.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="cmdCut" LabelTitle="Cut" TooltipTitle="Clipboard" TooltipDescription="Cut the current selection to the clipboard">
      <Command.SmallImages>
        <Image>res/Cut.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="cmdPaste" LabelTitle="Paste" TooltipTitle="Clipboard" TooltipDescription="Inserts the content of the clipboard at the cursor position">
      <Command.LargeImages>
        <Image>res/Paste.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdUndo" LabelTitle="Undo" TooltipTitle="Undo" TooltipDescription="Undo the last change">
      <Command.LargeImages>
        <Image>res/UndoL.bmp</Image>
      </Command.LargeImages>
      <Command.SmallImages>
        <Image>res/Undo.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="cmdRedo" LabelTitle="Redo" TooltipTitle="Redo" TooltipDescription="Redo what was undone before">
      <Command.LargeImages>
        <Image>res/RedoL.bmp</Image>
      </Command.LargeImages>
      <Command.SmallImages>
        <Image>res/Redo.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="cmdLineWrap" LabelTitle="Wrap Lines" TooltipTitle="Wrap Lines" TooltipDescription="Wrap lines at the end of the window">
      <Command.LargeImages>
        <Image>res/LineWrapL.bmp</Image>
      </Command.LargeImages>
      <Command.SmallImages>
        <Image>res/LineWrap.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="cmdWhiteSpace" LabelTitle="Whitespace" TooltipTitle="Show Whitespaces" TooltipDescription="Turns showing whitespaces on/off">
      <Command.LargeImages>
        <Image>res/wspaceL.bmp</Image>
      </Command.LargeImages>
      <Command.SmallImages>
        <Image>res/wspaceS.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="cmdGroupEncoding" LabelTitle="Encoding">
      <Command.LargeImages>
        <Image>res/KeyL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdLoadAsEncoding" LabelTitle="Load as" TooltipTitle="Load as" TooltipDescription="Allows to load a file with a specific encoding">
      <Command.LargeImages>
        <Image>res/keyL.bmp</Image>
      </Command.LargeImages>
      <Command.SmallImages>
        <Image>res/keyS.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="cmdConvertEncoding" LabelTitle="Convert to" TooltipTitle="Convert to" TooltipDescription="Converts the file to the specified encoding">
      <Command.LargeImages>
        <Image>res/keyL.bmp</Image>
      </Command.LargeImages>
      <Command.SmallImages>
        <Image>res/keyS.bmp</Image>
      </Command.SmallImages>
    </Command>
    <Command Name="cmdCodeStyle" LabelTitle="Language" TooltipTitle="Language" TooltipDescription="Set the coloring according to the code language">
      <Command.LargeImages>
        <Image>res/CodeStyleL.bmp</Image>
      </Command.LargeImages>
      <Command.SmallImages>
        <Image>res/CodeStyleS.bmp</Image>
      </Command.SmallImages>
    </Command>
  </Application.Commands>
  <Application.Views>
    <Ribbon>
      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="cmdFileMenu">
          <ApplicationMenu.RecentItems>
            <RecentItems CommandName="cmdMRUList" EnablePinning="true" MaxCount="20"/>
          </ApplicationMenu.RecentItems>
          <MenuGroup Class="MajorItems">
            <Button CommandName="cmdNew" />
            <Button CommandName="cmdOpen" />
            <Button CommandName="cmdSave" />
            <Button CommandName="cmdSaveAll" />
            <Button CommandName="cmdSaveAs" />
            <Button CommandName="cmdClose" />
            <Button CommandName="cmdCloseAll" />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="cmdExit" />
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>
      <Ribbon.Tabs>
        <Tab CommandName="cmdMainTab">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <!-- This describes the maximum size of each group in the tab. -->
                <Scale Group="cmdGroupFile" Size="Large" />
                <Scale Group="cmdGroupClipboard" Size="Medium" />
                <Scale Group="cmdGroupUndo" Size="Large" />
                <Scale Group="cmdGroupView" Size="Large" />
                <Scale Group="cmdGroupEncoding" Size="Medium" />
              </ScalingPolicy.IdealSizes>
              <!-- This describes the order and how the groups shrink when the window is
              resized. -->
              <Scale Group="cmdGroupFile" Size="Medium" />
              <Scale Group="cmdGroupClipboard" Size="Small" />
              <Scale Group="cmdGroupUndo" Size="Medium" />
              <!--<Scale Group="cmdGroupView" Size="Medium" />-->
              <!--<Scale Group="cmdGroupEncoding" Size="Large" />-->
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          <Group CommandName="cmdGroupFile" SizeDefinition="ThreeButtons">
            <Button CommandName="cmdNew" />
            <Button CommandName="cmdSave" />
            <Button CommandName="cmdSaveAll" />
          </Group>
          <Group CommandName="cmdGroupClipboard" SizeDefinition="ThreeButtons-OneBigAndTwoSmall">
            <Button CommandName="cmdPaste" />
            <Button CommandName="cmdCopy" />
            <Button CommandName="cmdCut" />
          </Group>
          <Group CommandName="cmdGroupUndo" SizeDefinition="TwoButtons">
            <Button CommandName="cmdUndo" />
            <Button CommandName="cmdRedo" />
          </Group>
          <Group CommandName="cmdGroupView" SizeDefinition="TwoButtons">
            <ToggleButton CommandName="cmdLineWrap" />
            <ToggleButton CommandName="cmdWhiteSpace" />
          </Group>
          <Group CommandName="cmdGroupEncoding" SizeDefinition="ThreeButtons">
            <DropDownGallery CommandName="cmdLoadAsEncoding" TextPosition="Right" Type="Items" ItemHeight="16" ItemWidth="16">
              <DropDownGallery.MenuLayout>
                <VerticalMenuLayout />
              </DropDownGallery.MenuLayout>
            </DropDownGallery>
            <DropDownGallery CommandName="cmdConvertEncoding" TextPosition="Right" Type="Items" ItemHeight="16" ItemWidth="16">
              <DropDownGallery.MenuLayout>
                <VerticalMenuLayout />
              </DropDownGallery.MenuLayout>
            </DropDownGallery>
            <DropDownGallery CommandName="cmdCodeStyle" TextPosition="Right" Type="Items" ItemHeight="16" ItemWidth="16">
              <DropDownGallery.MenuLayout>
                <VerticalMenuLayout />
              </DropDownGallery.MenuLayout>
            </DropDownGallery>
          </Group>
        </Tab>
      </Ribbon.Tabs>
      <Ribbon.QuickAccessToolbar>
        <QuickAccessToolbar CommandName="cmdQat" />
      </Ribbon.QuickAccessToolbar>
    </Ribbon>
  </Application.Views>
</Application>