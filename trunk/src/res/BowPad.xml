  <Application.Views>
    <Ribbon>
      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="cmdFileMenu">
          <ApplicationMenu.RecentItems>
            <RecentItems CommandName="cmdMRUList" EnablePinning="true" MaxCount="20"/>
          </ApplicationMenu.RecentItems>
          <MenuGroup Class="MajorItems">
            <Button CommandName="cmdNew" />
            <Button CommandName="cmdOpen" />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="cmdSave" />
            <Button CommandName="cmdSaveAll" />
            <Button CommandName="cmdSaveAs" />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="cmdClose" />
            <Button CommandName="cmdCloseAll" />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="cmdExit" />
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>
      <Ribbon.Tabs>
        <Tab CommandName="cmdMainTab">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <!-- This describes the maximum size of each group in the tab. -->
                <Scale Group="cmdGroupFile" Size="Large" />
                <Scale Group="cmdGroupClipboard" Size="Medium" />
                <Scale Group="cmdGroupUndo" Size="Large" />
                <Scale Group="cmdGroupEncoding" Size="Medium" />
              </ScalingPolicy.IdealSizes>
              <!-- This describes the order and how the groups shrink when the window is
              resized. -->
              <Scale Group="cmdGroupFile" Size="Medium" />
              <Scale Group="cmdGroupClipboard" Size="Small" />
              <Scale Group="cmdGroupUndo" Size="Medium" />
              <Scale Group="cmdGroupEncoding" Size="Small" />
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          <Group CommandName="cmdGroupFile" SizeDefinition="FourButtons">
            <SplitButton CommandName="cmdGroupPrint">
              <SplitButton.ButtonItem>
                <Button CommandName="cmdPrintNow"/>
              </SplitButton.ButtonItem>
              <Button CommandName="cmdPrint" />
              <Button CommandName="cmdPageSetup" />
            </SplitButton>
            <Button CommandName="cmdNew" />
            <Button CommandName="cmdSave" />
            <Button CommandName="cmdSaveAll" />
          </Group>
          <Group CommandName="cmdGroupClipboard" SizeDefinition="ThreeButtons-OneBigAndTwoSmall">
            <Button CommandName="cmdPaste" />
            <Button CommandName="cmdCopy" />
            <Button CommandName="cmdCut" />
          </Group>
          <Group CommandName="cmdGroupUndo" SizeDefinition="FiveButtons">
            <Button CommandName="cmdUndo" />
            <Button CommandName="cmdRedo" />
            <Button CommandName="cmdPrevious" />
            <Button CommandName="cmdNext" />
            <Button CommandName="cmdFindReplace" />
          </Group>
          <Group CommandName="cmdGroupEncoding" SizeDefinition="FiveButtons">
            <DropDownGallery CommandName="cmdLoadAsEncoding" TextPosition="Right" Type="Items" ItemHeight="16" ItemWidth="16">
              <DropDownGallery.MenuLayout>
                <VerticalMenuLayout />
              </DropDownGallery.MenuLayout>
            </DropDownGallery>
            <DropDownGallery CommandName="cmdConvertEncoding" TextPosition="Right" Type="Items" ItemHeight="16" ItemWidth="16">
              <DropDownGallery.MenuLayout>
                <VerticalMenuLayout />
              </DropDownGallery.MenuLayout>
            </DropDownGallery>
            <DropDownGallery CommandName="cmdCodeStyle" TextPosition="Right" Type="Items" ItemHeight="16" ItemWidth="16">
              <DropDownGallery.MenuLayout>
                <FlowMenuLayout Columns="4"/>
              </DropDownGallery.MenuLayout>
            </DropDownGallery>
            <DropDownButton CommandName="cmdEOLGroup">
              <MenuGroup>
                <ToggleButton CommandName="cmdEOLWin"/>
                <ToggleButton CommandName="cmdEOLUnix"/>
                <ToggleButton CommandName="cmdEOLMac"/>
              </MenuGroup>
            </DropDownButton>
            <Button CommandName="cmdStyleConfigurator" />
          </Group>
        </Tab>
        <Tab CommandName="cmdViewTab">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <!--<Scale Group="cmdGroupVEdge" Size="Large" />-->
                <Scale Group="cmdGroupView" Size="Large" />
              </ScalingPolicy.IdealSizes>
              <!--<Scale Group="cmdGroupVEdge" Size="Medium" />-->
              <!--<Scale Group="cmdGroupView" Size="Medium" />-->
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          <Group CommandName="cmdGroupVEdge">
            <Spinner CommandName="cmdVerticalEdge" />
          </Group>
          <Group CommandName="cmdGroupView">
            <SizeDefinition>
              <ControlNameMap>
                <ControlNameDefinition Name="button1"/>
                <ControlNameDefinition Name="button2"/>
                <ControlNameDefinition Name="button3"/>
                <ControlNameDefinition Name="button4"/>
              </ControlNameMap>
              <GroupSizeDefinition Size="Large">
                <ControlGroup>
                  <ControlSizeDefinition ControlName="button1" ImageSize="Large" IsLabelVisible="true" />
                  <ControlSizeDefinition ControlName="button2" ImageSize="Large" IsLabelVisible="true" />
                </ControlGroup>
                <ColumnBreak ShowSeparator="true"/>
                <Row>
                  <ControlSizeDefinition ControlName="button3" ImageSize="Small" IsLabelVisible="true" IsImageVisible="false" />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName="button4" ImageSize="Small" IsLabelVisible="true" />
                </Row>
              </GroupSizeDefinition>
              <GroupSizeDefinition Size="Medium">
                <Row>
                  <ControlSizeDefinition ControlName="button1" ImageSize="Small" IsLabelVisible="true" />
                  <ControlSizeDefinition ControlName="button3" ImageSize="Small" IsLabelVisible="true" IsImageVisible="false" />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName="button2" ImageSize="Small" IsLabelVisible="true" />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName="button4" ImageSize="Small" IsLabelVisible="true" />
                </Row>
              </GroupSizeDefinition>
              <GroupSizeDefinition Size="Small">
                <Row>
                  <ControlSizeDefinition ControlName="button1" ImageSize="Small" IsLabelVisible="true" />
                  <ControlSizeDefinition ControlName="button3" ImageSize="Small" IsLabelVisible="false" IsImageVisible="false" />
                </Row>
                <Row>
                  <ControlSizeDefinition ControlName="button2" ImageSize="Small" IsLabelVisible="true" />
                  <ControlSizeDefinition ControlName="button4" ImageSize="Small" IsLabelVisible="false" />
                </Row>
              </GroupSizeDefinition>
            </SizeDefinition>
            <ToggleButton CommandName="cmdLineWrap" />
            <ToggleButton CommandName="cmdWhiteSpace" />
            <Spinner CommandName="cmdTabSize" />
            <ToggleButton CommandName="cmdUseTabs" />
          </Group>
        </Tab>
        <Tab CommandName="cmdEditTab">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <Scale Group="cmdGroupComment" Size="Large" />
                <Scale Group="cmdGroupCase" Size="Medium" />
                <Scale Group="cmdGroupLines" Size="Medium" />
              </ScalingPolicy.IdealSizes>
              <Scale Group="cmdGroupComment" Size="Medium" />
              <!--<Scale Group="cmdGroupCase" Size="Small" />-->
              <Scale Group="cmdGroupLines" Size="Small" />
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          <Group CommandName="cmdGroupComment" SizeDefinition="TwoButtons">
            <Button CommandName="cmdComment" />
            <Button CommandName="cmdUnComment" />
          </Group>
          <Group CommandName="cmdGroupCase" SizeDefinition="TwoButtons">
            <Button CommandName="cmdUppercase" />
            <Button CommandName="cmdLowercase" />
          </Group>
          <Group CommandName="cmdGroupLines" SizeDefinition="FiveButtons">
            <Button CommandName="cmdLineDuplicate" />
            <Button CommandName="cmdLineSplit" />
            <Button CommandName="cmdLineJoin" />
            <Button CommandName="cmdLineUp" />
            <Button CommandName="cmdLineDown" />
          </Group>
        </Tab>
      </Ribbon.Tabs>
      <Ribbon.QuickAccessToolbar>
        <QuickAccessToolbar CommandName="cmdQat" />
      </Ribbon.QuickAccessToolbar>
    </Ribbon>
    <ContextPopup>
      <ContextPopup.MiniToolbars>
        <MiniToolbar Name="CopyPasteToolbar">
          <MenuGroup>
            <Button CommandName="cmdCut" />
            <Button CommandName="cmdCopy" />
            <Button CommandName="cmdPaste" />
          </MenuGroup>
        </MiniToolbar>
      </ContextPopup.MiniToolbars>
      <ContextPopup.ContextMenus>
        <ContextMenu Name="ContextMenu">
          <MenuGroup>
            <Button CommandName="cmdUndo" />
            <Button CommandName="cmdRedo" />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="cmdSelectAll" />
            <Button CommandName="cmdDelete" />
          </MenuGroup>
        </ContextMenu>
      </ContextPopup.ContextMenus>
      <ContextPopup.ContextMaps>
        <ContextMap CommandName="cmdContextMap" ContextMenu="ContextMenu" MiniToolbar="CopyPasteToolbar"/>
      </ContextPopup.ContextMaps>
    </ContextPopup>
  </Application.Views>
</Application>