<?xml version='1.0' encoding='utf-8'?>

<Application xmlns='http://schemas.microsoft.com/windows/2009/Ribbon'>
  <!-- Commands section -->
  <Application.Commands>

    <Command Name="cmdMainTab" Symbol="IDC_CMD_MAINTAB">
      <Command.LabelTitle>Main</Command.LabelTitle>
    </Command>
    <Command Name="cmdGroupFile" LabelTitle="File">
      <!-- This image is used for when the group shrinks into a "pop-up".  The other groups
      in the markup don't display as pop-ups, so we don't specify an image for them.  -->
      <Command.LargeImages>
        <Image>res/SaveAllL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdQat"/>
    <Command Name="cmdFileMenu"/>
    <Command Name="cmdMRUList">
      <Command.LabelTitle>
        <String Id ="280">MRU List</String>
      </Command.LabelTitle>
    </Command>
    <Command Name="cmdExit" LabelTitle="Exit">
      <Command.LargeImages>
        <Image>res/ExitL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdNew" LabelTitle="New" TooltipTitle="New Document" TooltipDescription="Creates a new tab with an empty document">
      <Command.LargeImages>
        <Image>res/NewL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdOpen" LabelTitle="Open" TooltipTitle="Open Files" TooltipDescription="Opens one or more files">
      <Command.LargeImages>
        <Image>res/OpenL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdSave" LabelTitle="Save" TooltipTitle="Save File" TooltipDescription="Saves the current tab">
      <Command.LargeImages>
        <Image>res/SaveL.bmp</Image>
      </Command.LargeImages>
    </Command>
    <Command Name="cmdSaveAll" LabelTitle="Save all" TooltipTitle="Save Files" TooltipDescription="Saves all open files">
      <Command.LargeImages>
        <Image>res/SaveAllL.bmp</Image>
      </Command.LargeImages>
    </Command>
  </Application.Commands>
  <Application.Views>
    <Ribbon>
      <Ribbon.ApplicationMenu>
        <ApplicationMenu CommandName="cmdFileMenu">
          <ApplicationMenu.RecentItems>
            <RecentItems CommandName="cmdMRUList" EnablePinning="true" MaxCount="20"/>
          </ApplicationMenu.RecentItems>
          <MenuGroup Class="MajorItems">
            <Button CommandName="cmdNew" />
            <Button CommandName="cmdOpen" />
            <Button CommandName="cmdSave" />
            <Button CommandName="cmdSaveAll" />
          </MenuGroup>
          <MenuGroup>
            <Button CommandName="cmdExit" />
          </MenuGroup>
        </ApplicationMenu>
      </Ribbon.ApplicationMenu>
      <Ribbon.Tabs>
        <Tab CommandName="cmdMainTab">
          <Tab.ScalingPolicy>
            <ScalingPolicy>
              <ScalingPolicy.IdealSizes>
                <!-- This describes the maximum size of each group in the tab. -->
                <Scale Group="cmdGroupFile" Size="Large" />
              </ScalingPolicy.IdealSizes>
              <!-- This describes the order and how the groups shrink when the window is
              resized. -->
              <Scale Group="cmdGroupFile" Size="Medium" />
            </ScalingPolicy>
          </Tab.ScalingPolicy>
          <Group CommandName="cmdGroupFile" SizeDefinition="ThreeButtons">
            <Button CommandName="cmdNew" />
            <Button CommandName="cmdSave" />
            <Button CommandName="cmdSaveAll" />
          </Group>
        </Tab>
      </Ribbon.Tabs>
      <Ribbon.QuickAccessToolbar>
        <QuickAccessToolbar CommandName="cmdQat" />
      </Ribbon.QuickAccessToolbar>
    </Ribbon>
  </Application.Views>
</Application>